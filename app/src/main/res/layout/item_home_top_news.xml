<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="280dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:layout_margin="10dp"
    android:background="@drawable/bg_top_news_item"
    android:outlineSpotShadowColor="?colorOnPrimary"
    android:layoutDirection="ltr"
    app:cardBackgroundColor="?colorSecondary"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/cormorant_garamond_bold"
            android:text="BHP to boost nickel exploration spending amid EV boom"
            android:textColor="?colorOnSecondary"
            android:textSize="16dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/news_disc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news_title"
            android:layout_marginStart="15dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/cormorant_garamond_regular"
            android:text="KALGOORLIE, Australia : BHP Group will increase its spending on nickel exploration over the next two years to meet growing demand for the raw material used in making electric vehicle batteries, the chief of its nickel operations said on Wednesday.BHP, throughâ€¦"
            android:textColor="?colorOnSecondary"
            android:textSize="9dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/mtv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="13dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/cormorant_garamond_bold_italic"
                android:text="Author: Crystal Allen"
                android:textColor="?colorOnSecondary"
                android:textSize="10sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/mtv_publish_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="13dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/cormorant_garamond_medium"
                android:gravity="right"
                android:text="2022-08-03"
                android:textColor="?colorOnSecondary"
                android:textSize="10sp" />
        </LinearLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>