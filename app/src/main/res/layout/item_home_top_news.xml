<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="180dp" android:background="@drawable/bg_top_news_item"
    android:layout_margin="8dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/DarkBlue"
        android:fontFamily="@font/roboto_black"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:textSize="14dp"
        android:text="BHP to boost nickel exploration spending amid EV boom" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/news_disc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/DarkBlue"
        android:fontFamily="@font/roboto_light"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="9dp"
        android:textSize="10dp"
        android:text="KALGOORLIE, Australia : BHP Group will increase its spending on nickel exploration over the next two years to meet growing demand for the raw material used in making electric vehicle batteries, the chief of its nickel operations said on Wednesday.BHP, throughâ€¦"
        android:layout_below="@+id/news_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Author: Crystal Allen"
            android:textSize="10sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/Red"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="13dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/mtv_publish_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="2022-08-03"
            android:textSize="10sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/DarkBlue"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="13dp"/>
    </LinearLayout>


</RelativeLayout>