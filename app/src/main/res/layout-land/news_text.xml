<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorSecondary"
    android:padding="18dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/single_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cormorant_garamond_bold"
        android:text="News Text"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="26sp" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/EFAB_single_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cormorant_garamond_bold"
        android:text="Go to website"
        android:textColor="?colorSecondary"
        app:backgroundTint="?colorOnSecondary"
        android:layout_below="@+id/main_news"
        android:layout_alignParentEnd="true"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/main_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/single_news_title"
        android:fontFamily="@font/cormorant_garamond_regular"
        android:text=""
        android:textColor="?attr/colorOnSecondary"
        android:textSize="16sp" />


</RelativeLayout>