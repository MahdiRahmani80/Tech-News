<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="18dp"
    android:background="?colorSecondary">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/single_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cormorant_garamond_bold"
        android:text="News Text"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="26sp" />

    <ScrollView
        android:id="@+id/sv_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/single_news_title"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="10dp"
        android:paddingBottom="14dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/main_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cormorant_garamond_regular"
            android:text="News Text"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="16sp"/>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/EFAB_single_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/cormorant_garamond_bold"
        android:text="Go to website"
        android:textColor="?attr/colorSecondary"
        app:backgroundTint="?attr/colorOnSecondary" />

</RelativeLayout>